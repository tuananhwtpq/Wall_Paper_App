<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_user"
        android:clipToOutline="true"
        android:src="@drawable/fake_avatar"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImageStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_user_name"
        tools:text="Clay Banks"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/iv_user"
        app:layout_constraintStart_toEndOf="@id/iv_user"
        app:layout_constraintBottom_toBottomOf="@id/iv_user"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iv_user_image"
        android:src="@drawable/fake_background"
        app:layout_constraintStart_toStartOf="@id/iv_user"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:scaleType="center"
        android:clipToOutline="true"
        android:background="@drawable/image_border_rounded"
        app:layout_constraintTop_toBottomOf="@id/iv_user"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_photo"
        tools:text="1800 Photos"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_image"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/iv_user_image"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_title"
        tools:text="outside."
        app:layout_constraintBottom_toTopOf="@id/total_photo"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/iv_user_image"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>